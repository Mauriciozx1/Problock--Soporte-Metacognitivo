@import 'nib'
@require '../base/base-color'


.btn-tour
	position: absolute
	font-size: 1.3rem
	bottom: 1rem
	right: 1rem
	padding: 0.3rem 1rem 
	z-index: 10

.block-message
	background: white
	border: 2px solid header-color
	border-radius: 0.5rem
	box-shadow: 1px 1px 5px 0px rgba(black, 0.7)
	display: none
	top: 20rem
	left: 35rem
	padding: 1rem
	position: fixed
	width: 21rem
	z-index: 10
	&:before
		border: 8px solid transparent
		border-right-color: header-color
		content: ''
		height: 0
		position: absolute
		right: 100%
		top: 6px
		width: 0
	&:after
		background: white
		border: 2px solid header-color
		border-color: header-color header-color transparent transparent
		border-radius: 50%
		color: header-color
		content: attr(data-icon)
		display: block
		font-family: 'Material Icons'
		font-size: 3.5rem
		padding: 1px
		position: absolute
		right: -7px
		top: -7px
		z-index: 10
	&-title
		color: header-color
		border-bottom: 1px solid header-color
		font-weight: bold
		margin-bottom: 0.5rem 
		text-align: center
	&-content
		font-size: 15px

.frame
	background: #E6E6E6
	&-header
		position: relative
		&>div
			display: inline-block
				
		.activity-info
			cursor: pointer
			padding: 1rem 1rem 1rem 2rem
			vertical-align: middle
			.activity-progress
				border-right: 1px solid darken(lightgray,10%)
				padding-right: 1rem 
				.progress-bar-container
					background: color-danger
					border-radius: 1rem
					height: 1.2rem
					margin: auto
					margin-top: 0.3rem 
					overflow: hidden
					width: 13rem
					
					.progress-bar
						background: color-success
						height: 100%
						width: 0%
		.activity-title
			vertical-align: middle
			h2
				margin: 0.5rem
		#btn-finish
			position: absolute
			bottom: 1rem
			right: 1rem
		#btn-save
			position: absolute
			bottom: 1rem
			right: 9rem
		
	&-content
		display: flex
		height: 500px
		position: relative
		section
			height: 100%
			
		.activities-menu
			background: #e6e6e6
			border-top: 1px solid rgba(black,0.14)
			box-shadow: 2px 3px 6px 0 rgba(black, 0.43)
			box-sizing: border-box
			height: 100%
			left: 0
			min-width: 300px
			position: absolute
			top: 0
			transform: translateX(-100%)
			transition: 0.5s
			z-index: 100

			&.visible
				transform: translateX(0)
			.activity-group
				.list-header
					background: #f9f9f9
					padding: 8px 15px
				&.completed
					.group-state
						border-color: #36b736
						color: #289c28
				&.locked						
					.group-state
						border-color: #b6b6b6
						color: #b6b6b6
					
				&.unlocked
					.group-state
						border-color: header-color
						color: header-color

				ul
					display: none
					font-size: 14px
					list-style: none
					margin: 0
					padding: 0
			.activity-row
				padding: 5px 25px 5px 40px
				&:hover:not(.locked):not(.selected)
					border-right: 4px solid lighten(header-color, 20%)
					
				&:first-child
					border-top: 2px solid #bebebe
				&:last-child
					border-bottom: 2px solid #bebebe
				
				&.selected
					border-right: 6px solid header-color        
				&.completed
					background: #caf1ca
					.activity-state
						border-color: #36b736
						color: #289c28
				&.locked
					background: #f0f0f0
					cursor: default							
					.activity-state
						border-color: #b6b6b6
						color: #b6b6b6
					
				&.unlocked
					background: #efd0ef
					.activity-state
						border-color: header-color
						color: header-color
			
			.activity-group , .activity-row
				border-bottom: 1px solid lightgray
				cursor: pointer
						
				.activity-name , .group-name
					font-weight: bold
				.activity-state, .group-state
					border: 2px solid #b6b6b6
					border-radius: 50%
					display: inline-block
					position: relative
					margin-right: 5px 
					vertical-align: middle 
					
					i
						left: 50%
						position: absolute
						transform: translate(-50%)
				
				.group-state
					height: 25px
					width: 25px
					i
						font-size: 17px
						top: 4px
				
				.activity-state
					height: 20px
					width: 20px
					i
						font-size: 15px
						top: 3px
					

			
		.loading-container
			background: white
			height: 100%
			opacity: 0
			position: absolute
			transition: 0.8s
			visibility: hidden
			width: 100%
			white-space: no-wrap
			z-index: 50
			
			&.active
				opacity: 1
				visibility: visible
			
			.loading:before
				color: header-color
				content: 'Cargando Actividad...'
				font-size:20px 
				font-weight: bold
				left: 50%
				position: absolute
				top: 110%
				transform: translateX(-50%)
							

		&-left
			flex-grow: 1
			position: relative
			.frame-panel
				box-sizing: border-box
				border: 1px solid lightgray
				visibility: hidden
				height: 100%
				&.active
					visibility: visible
			.execution-controls
				position: absolute
				top: 10px
				right: 10px
				z-index: 10
				&.by-step
					#btn-step
						visibility: visible
				&.running
					#btn-run
						display: none
					#btn-stop
						display: inline-block
					
				button
					background: transparent
					border: 2px solid #70d9fa
					border-radius: 50%
					cursor: pointer
					display: inline-block
					color: #70d9fa
					height: 3rem
					position: relative
					outline: 0
					width: 3rem
					i
						position absolute
						top: 50%
						left: 50%
						transform: translate(-50%,-50%)
					&:hover
						border-color: darken(#70d9fa, 10%)
						color: darken(#70d9fa, 10%)
					&:disabled
						border-color: lightgray
						color: lightgray
						cursor: default
				#btn-step
					visibility: hidden

				#btn-stop
					display: none
			.panel-selector
				bottom:100%
				right: 5%
				position: absolute
				span
					background: lightgray
					border: 1px solid darken(lightgray, 15%)
					border-bottom: 0 
					border-radius: 0.8rem 2.4rem 0 0
					display: inline-block
					margin-bottom: -1px
					padding: 0.6rem 2.2rem 0.6rem 1.6rem
					&:hover
						cursor: pointer
					&.active
						background: white
			.blockly-panel
				position: absolute
				width: 100%
				height: 100%
				background: white
			.javascript-panel
				color: white
				background: #272822
				overflow-y:auto 
				padding: 1rem
			
		&-right
			padding-left: 0.6rem 
			position: relative
			width: 30%
			
			.frame-panel
				box-sizing: border-box;
				border: 1px solid lightgray
				height: 50%
				padding: 1rem
			
			.h-resizer-bar, .v-resizer-bar
				background: #E6E6E6
				position: absolute
				i
					color:#a5a5a5
			.h-resizer-bar
				bottom: 0
				cursor: e-resize
				left: 0
				top: 0
				width: 0.6rem
				z-index: 5
			.v-resizer-bar
				cursor: s-resize
				height: 0.6rem
				left: 0
				right: 0
				top: 50%
				transform: translateY(-50%)				

			.resources-panel
				background: white
				overflow-y: auto
				text-align : justify
				h4
					text-align: center
				
			.output-panel
				background: #343434	 
				color: #d3f1ff	
				overflow-y: auto
				&-console
					color: #97CAC8
				.output-tag
					color: #fff27e

.resources-modal, .finish-modal
	bottom: 0
	display: none
	left: 0
	position: fixed
	right: 0
	top: 0
	z-index: 100
	.modal-fade
		background: rgba(black, 0.8)
		position: absolute
		top: 0
		bottom: 0
		left: 0
		right: 0
	.modal
		background: white
		border: 2px solid lightgray
		border-radius: 1rem
		box-sizing: border-box
		display: flex
		flex-direction: column
		height: 90%
		left: 50%
		padding: 2rem
		padding-bottom: 1rem
		position: absolute
		top: 50%
		transform: translate(-50%, -50%)
		width: 80%
		z-index: 10
		img
			display: block
			margin: 1rem auto
		.btn-close
			cursor: pointer
			position: absolute
			right: 1rem
			top: 1rem
			&:hover
				color: header-color
		.modal-title
			color: header-color
			border-bottom: 2px solid header-color
			font-size: 2.3rem
			font-weight: bold
			padding-bottom: 1rem
			position: relative 
			text-align: center
			margin-bottom: 2rem

		.modal-content
			flex: 1
			position: relative
			overflow-y: auto
			line-height: 1.5
			
		.modal-footer
			height: 3rem
			position: relative
			
		.btn-gotit
			bottom: 1rem
			padding: 0.5rem 1.5rem
			position: absolute
			right: 3rem
.finish-modal
	.modal-title
		.activity-result-status
			background: header-color
			padding: 1rem
			border-radius: 50%
			height: 7rem
			position: absolute
			top: 0
			right: 0
			transform: translate(50%,-50%)
			width: 7rem
			i
				color: white
				font-size: 6rem
	.modal-content
		>div:first-child
			height: 10%
			font-size: 2rem
			text-align: center
			.code-lines-count
				color: purple
				font-weight: bold
				font-size: 2.6rem
				
		.code-panel-container
			background: #272822
			height: 64%
			overflow-y: auto
		.result-container
			border-top: 1px solid header-color
			height: 18%
			text-align: center
			ul
				font-size: 1.8rem
				padding: 0
				margin: 0
				list-style: none
				li
					padding: 0.5rem 0 0.5rem 3.2rem
					margin: 0
					display: none
					position: relative
					&.visible
						display: inline-block
					&:before
						content:""
						background: #ca0c0c
						border-radius: 50%
						height: 1.2rem
						width: 1.2rem
						display: block
						position: absolute
						top: 1.1rem
						left: 1.6rem
					&.completed
						&:before
							background: #1dbd13
			.calification-info
				background: header-color
				color: rgba(white,0.7)
				font-size: 4rem
				span
					font-size: 2.5rem
				i
					font-size: 2rem
				.total-percent
					color: white
					font-size: 4rem
					&:after
						content:"%"
	.modal-footer
		button
			position: absolute
			bottom: 1rem
		.btn-stay
			left: 1rem
		.btn-next
			right: 1rem
						
			
					