.compact-input
	display: inline-block
	font-size: 1.6rem
	position: relative
	vertical-align: top
	input
		box-sizing: border-box
		font-size: 1em
		padding: 0.7em
		width: 100%
		
		& ~ label
			color: #52a6e1
			left: 0.8em
			font-family: monospace
			font-size: 0.6em
			font-weight: bold
			opacity: 0
			position: absolute
			text-transform: uppercase
			top: 0.8em
			transition: 0.2s
		&.not-empty
			padding: 1em 0.7em 0.4em 0.7em
			& ~ label
				opacity: 1
				top: 0.4em


.merged-checkbox-group
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
	input[type="checkbox"]
		display: none
		&:checked + label
			background: header-color
			border-color: transparent
			color: logo-color
			position: relative
			bottom: -3px

		&:disabled + label
			background-color: lightgray
	label
		background: #f0f0f0;
		border: 1px solid #C1C1C1;
		color: #5F5F5F
		display: block;
		cursor: pointer;
		padding: 3px 7px;
		user-select: none
		transition: 0.1s
	p
		display: inline-block
		&:first-child
			label
				border-radius: 10px 0 0 10px
		&:last-child
			label
				border-radius: 0 10px 10px 0
				
.slide-checkbox
	display: inline-block
	margin: 0
	position: relative
	width: 50px
	&:before
		content: ""
		display:block
		//aspect-ratio 2:1
		padding-top: 50%
	input[type="checkbox"]
		display:none
		&:checked + label:after
			background: header-color
			width: 80%
		&:checked + label:before
			left:50%

		&:disabled + label
			background: darken(lightgray, 20%)
			&:before
				background: lightgray
	label
		background: lightgray
		border: 1px solid darken(lightgray, 15%)
		border-radius: 50px
		bottom: 0
		cursor: pointer
		display: inline-block
		left: 0
		margin: 0
		overflow: hidden
		position: absolute
		right: 0
		top: 0
		&:after
			background: transparent
			bottom: 0
			content: ""
			display: block
			left: 0
			position: absolute
			top: 0
			transition: 0.4s
			width:20%
		&:before
			background: #f9f9f9
			border-radius: 50%
			content: ""
			display:block
			height: 100%
			left: 0
			position: absolute
			top: 0
			transition: 0.4s
			width: 50%
			z-index: 10
			
/*****************************
*     Custom Checkbox
*******************************/			
[type="checkbox"].checkbox
	//Es necesario que esten presentes para poder recibir focus
	position: absolute
	left: -99999px
	&:focus
		& + label
			&:before
				border: 1px dotted #1e70c9
	//Para posicionamiento del CB al lado derecho del label			
	&.checkbox-right + label
		padding-left: 0
		padding-right: 25px
		&:before
			left: auto
			right: 0
		&:after
			left: auto
			right: 3px
	& + label
		position: relative
		padding-left: 25px
		cursor: pointer
		&:hover
			&:before
				border: 1px solid #1e70c9
		/* checkbox aspect */
		&:before
			content: ''
			position: absolute
			left:0
			top: 0
			width: 17px
			height: 17px
			border: 1px solid #aaa
			background: #f8f8f8
			border-radius: 3px
		/* checked mark aspect */
		&:after
			content: 'âœ”'
			position: absolute
			top: 3px 
			left: 3px
			font-size: 18px
			line-height: 0.8
			color: #1e70c9
			transition: all .2s
	/* checked mark aspect changes */
	&:not(:checked) + label:after 
		opacity: 0
		transform: scale(0)

	&:checked + label:after
		opacity: 1
		transform: scale(1)

	/* Disable Checkbox */
	&:disabled
		& + label
			color: #aaa
			&:before
				background-color: #ddd
				border-color: #bbb

		&:checked + label:after 
			color: #999

			

/*************************
* Parsley Form Validator
***************************/

input.parsley-success,
select.parsley-success,
textarea.parsley-success {
  color: #468847;
  background-color: #DDFFCF;
  border: 1px solid #BEDCA5;
}

input.parsley-error,
select.parsley-error,
textarea.parsley-error {
  color: #B94A48;
  background-color: #F2DEDE;
  border: 1px solid #EED3D7;
}

.parsley-errors-list {
  color: #f12828;
  margin: 2px 0 3px;
  padding: 0;
  list-style-type: none;
  font-size: 0.9em;
  line-height: 0.9em;
  opacity: 0;

  transition: all .3s ease-in;
  -o-transition: all .3s ease-in;
  -moz-transition: all .3s ease-in;
  -webkit-transition: all .3s ease-in;
}

.parsley-errors-list.filled {
  opacity: 1;
}