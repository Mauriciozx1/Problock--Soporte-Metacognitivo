@import 'nib'
@require '../base/base-color'

.maker-container
	display: flex
	.maker-aside-menu
		background: rgba(black, 0.8)
		color: white
		overflow-y: auto
		ul
			list-style: none
			padding: 0
			margin: 0
			li
				cursor: pointer
				display: block
				padding: 1rem 2rem
				
				&:hover, &.active
					background: rgba(white,0.1)
					color: lighten(header-color, 60%)
		.activity-group
			margin-bottom: 1rem
			div:first-child
				background: #8d2d8c
				padding: 0.5rem
				.group-title
					.btn-edit
						color: #ffff57
						cursor: pointer
						font-size: 1.7rem
						margin-left: 0.7rem
						&:hover
							color: darken(#ffff57,30%)
					&-value
						font-weight: bold
				.group-title-edit
					display: none
					input
						color: #454545
						display: block
					button
						font-size: 1.4rem
						padding: 0.5rem 0.7rem
			.btn-add
				border: 2px solid #8dff5f
				border-radius: 50%
				color: #8dff5f
				cursor: pointer
				display: inline-block
				font-size: 2.3rem
				padding: 0 0.7rem
				&:hover
					color: lighten(#8dff5f,50%)
					border-color: lighten(#8dff5f,40%)
					
		
	.activity-panel
		flex: 1
		position: relative
		padding-bottom: 0
		box-sizing: border-box
		overflow: hidden
		
		.no-activity-panel
			text-align: center
			display: block
			font-size: 4rem
			color: darkgray
			padding-top: 4rem
			
			position: absolute
			background: white
			height: 100%
			width: 100%
			top: 0
			left: 0
			visibility: hidden
			z-index: 1000

			i
				font-size: 17rem
				margin-top: 3rem
			&.active
				visibility: visible
				
		&-content
			height: 100%
			width: 100%

		
		.loading-container
			background: white
			height: 100%
			left: 0
			opacity: 0
			position: absolute
			transition: 0.8s
			top: 0
			visibility: hidden
			width: 100%
			white-space: no-wrap
			z-index: 50
			
			&.active
				opacity: 1
				visibility: visible
			
			.loading:before
				color: header-color
				content: 'Cargando Actividad...'
				font-size:20px 
				font-weight: bold
				left: 50%
				position: absolute
				top: 110%
				transform: translateX(-50%)
		.section-selector
			padding: 0.5rem 2rem
			.selector-option
				border-bottom: 2px solid transparent
				cursor: pointer
				display: inline-block
				font-weight: bold
				padding: 0.5rem 1rem
				&.active
					border-bottom-color: header-color
				&:hover:not(.active)
					border-bottom-color: lighten(header-color,20%)
		.activity-info
			flex-grow: 1
			position: relative
			height: calc(100% - 80px)
			
			section
				box-sizing: border-box
				height: 100%
				position: absolute
				top: 0
				left: 0
				visibility: hidden
				width: 100%
				&.active
					visibility: visible
		.basic-info-section
			overflow-y: auto
			padding: 5rem
			text-align: center
			#frm-activity-name
				width: 80%
				margin-bottom: 5rem
				font-size: 3rem
			.activity-resource
				margin: auto
				position: inline-block
				width: 80%
				#wysihtml-div
					border: 1px solid gray
					min-height: 20rem
					text-align: left
				
				
				
		.objectives-section
			display: flex
			.frame-content-left
				flex:1
				position: relative
				.frame-panel
					box-sizing: border-box
					border: 1px solid lightgray
					height: 100%

				.execution-controls
					position: absolute
					top: 10px
					right: 10px
					z-index: 10
					&.by-step
						#btn-step
							visibility: visible
					&.running
						#btn-run
							display: none
						#btn-stop
							display: inline-block
						
					button
						background: transparent
						border: 2px solid #70d9fa
						border-radius: 50%
						cursor: pointer
						display: inline-block
						color: #70d9fa
						height: 3rem
						position: relative
						outline: 0
						width: 3rem
						i
							position absolute
							top: 50%
							left: 50%
							transform: translate(-50%,-50%)
						&:hover
							border-color: darken(#70d9fa, 10%)
							color: darken(#70d9fa, 10%)
						&:disabled
							border-color: lightgray
							color: lightgray
							cursor: default
					#btn-step
						visibility: hidden

					#btn-stop
						display: none

				.blockly-panel
					position: absolute
					width: 100%
					height: 100%
					background: white
				
			.frame-content-right
				padding-left: 0.6rem 
				position: relative
				width: 30%
				
				.frame-panel
					box-sizing: border-box;
					border: 1px solid lightgray
					height: 50%
					padding: 1rem
				
				.h-resizer-bar, .v-resizer-bar
					background: #E6E6E6
					position: absolute
					i
						color:#a5a5a5
				.h-resizer-bar
					bottom: 0
					cursor: e-resize
					left: 0
					top: 0
					width: 0.6rem
					z-index: 5
				.v-resizer-bar
					cursor: s-resize
					height: 0.6rem
					left: 0
					right: 0
					top: 50%
					transform: translateY(-50%)				

				.objectives-panel
					overflow-y: auto
					.objectives-container
						.objective-row
							align-items: center
							display: flex
							margin-bottom: 0.5rem
							&:first-child
								font-weight: bold
							>div
								&:nth-child(1)
									width: 19rem
								&:nth-child(2)
									width: 6rem
									input
										width: 100%
								&:nth-child(3)
									padding-left: 1.5rem
						.results-values-container
							display: none 
							padding-left: 2.5rem
							margin-bottom: 1rem
							.results-values
								margin-bottom: 0.5rem
								.result-value-row
									margin-bottom: 2px
									span
										background: #f9e3f9
										display: inline-block
										padding: 0.4rem
										width: 22.5rem
							input
								width: 22.8rem
							button
								font-weight: bold 
								width: 2.6rem
				.output-panel
					background: #343434	 
					color: #d3f1ff	
					overflow-y: auto
					&-console
						color: #97CAC8
					.output-tag
						color: #fff27e
						
.blocklyToolboxDiv
	display: none
	
.wysihtml-toolbar
	background: #f0f0f0
	border-radius: 1rem
	box-shadow: 1px 1px 4px 0px rgba(black, 0.7)
	&>a
		border-right: 1px solid lightgray
		color: darken(darkgray, 15%)
		cursor: pointer
		display: inline-block
		font-weight: bold
		font-size: 1.8rem
		padding: 0.5rem
		text-decoration: none
		&:hover
			background: rgba(black, 0.1)
			color: darken(darkgray, 30%)
		&:first-child
			border-left: 1px solid lightgray

