

/**
* Tooltip Styles
*/

tooltip-color = white
tooltip-background-color =  rgba(header-color,0.9)

/* Base styles for the element that has a tooltip */
[data-tooltip],
.tooltip 
	cursor: pointer
	position: relative
	
	/* Base styles for the entire tooltip */
	&:before , &:after
		opacity: 0
		pointer-events: none
		position: absolute
		transition: opacity 0.2s ease-in-out, visibility 0.2s ease-in-out, transform 0.2s cubic-bezier(0.71, 1.7, 0.77, 1.24)
		transform: translate3d(0, 0, 0)
		visibility: hidden
		z-index: 100
		

		
	/* Show the entire tooltip on hover and focus */
	&:focus, &:hover
			&:before , &:after
				opacity: 1
				visibility: visible
			
	/* Base styles for the tooltip's directional arrow */
	&:before
		background: transparent
		border: 6px solid transparent
		content: ""
		z-index: 1001
	
	/* Base styles for the tooltip's content area */
	&:after
		background-color: tooltip-background-color				
		border-radius: 4px
		color: tooltip-color
		content: attr(data-tooltip)
		font-size: 14px
		font-weight: normal
		text-shadow: 0px 0px
		padding: 5px 10px
		width: 150px
		z-index: 1000
		
	/* Directions */
	
	/* Top (default) */
	& , .tooltip-top
		&:before, &:after
			bottom: 100%
			left: 50%
		&:before
			border-top-color: tooltip-background-color
			margin-bottom: -12px
			
		/* Horizontally align top/bottom tooltips */	
		&:after
			transform: translateX(-50%)
				
		&:hover, &:focus
			&:before , &:after
				transform: translate(-50%, -12px) 

			
/* Bottom */
.tooltip-bottom
	&:before, &:after
		bottom: auto
		left: 50%
		top: 100%
	&:before
		border-bottom-color: tooltip-background-color
		border-top-color: transparent
		margin-bottom: 0
		margin-top: -12px
	
	&:after
		transform: translateX(-50%)

	&:hover, &:focus
		&:before , &:after
			transform: translate(-50%, 12px) 
			
/* Left */
.tooltip-left
	&:before, &:after
		bottom: 50%
		left: auto
		right: 100%
		transform: translate(12px, 50%) 
	&:before
		border-left-color: tooltip-background-color
		border-top-color: transparent
		margin-bottom: 0
		margin-left: 0
		margin-right: -12px
		
	&:hover, &:focus
		&:before , &:after
			transform: translate(-12px, 50%)

/* Right */
.tooltip-right
	&:before, &:after
		bottom: 50%
		left: 100%
		transform: translate(-12px, 50%) 
	&:before
		border-right-color: tooltip-background-color
		border-top-color: transparent
		margin-bottom: 0
		margin-right: 0
		margin-left: -12px
		 
	&:hover, &:focus
		&:before , &:after
			transform: translate(12px, 50%)  

.tooltip-left, .tooltip-right
	/* Vertically center tooltip content for left/right tooltips */
	&:after
		margin-left: 0
	
