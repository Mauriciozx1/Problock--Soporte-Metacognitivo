.loading
	display: inline-block;
	position: relative;
	width: 130px;
	&:after
		content: ''
		display: block
		/* 1:1ratio */
		padding-top: 100%
	&-circle
		animation:loading 1.2s linear infinite
		box-sizing:border-box
		border:13px solid
		border-color: rgba(header-color, 0.9) rgba(header-color, 0.5)
		border-radius:50%
		bottom: 0
		left: 0
		position: absolute
		right: 0
		top: 0
	&-image
		left: 50%
		position: absolute
		top: 50%
		transform: translate(-50%, -50%)
		width: 40%
		img
			width: 100%
			
.mini-loading
	animation:loading 0.7s linear infinite
	display: inline-block;
	border-radius:50%
	border:4px solid lightblue
	border-color:#1e70c9 lightblue
	box-sizing:border-box
	height: 20px
	position: relative;
	width: 20px;

@keyframes loading
	0%{transform:rotate(0deg)}
	100%{transform:rotate(360deg)}